<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context="com.joelimyx.politicallocal.bills.detail.sponsors.SponsorsFragment">

    <TextView
        android:id="@+id/sponsor_main_placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Main Sponsor"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#FFFF00"
        android:background="#EF6C00"
        android:paddingLeft="6dp"/>

    <include android:id="@+id/sponsor_main_layout"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@id/sponsor_main_placeholder"
             layout="@layout/list_item_reps"/>

    <TextView
        android:id="@+id/sponsor_cosponsor_placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cosponsor(s)"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#FFFF00"
        android:background="#EF6C00"
        android:paddingLeft="6dp"
        android:layout_below="@id/sponsor_main_layout"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/sponsor_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/sponsor_cosponsor_placeholder"/>
</RelativeLayout>