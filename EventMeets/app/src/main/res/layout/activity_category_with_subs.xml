<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_category_with_subs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jon.eventmeets.event_category.CategoryWithSubsActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/subcategory_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/event_in_category_recycler"
        android:layout_below="@id/subcategory_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
