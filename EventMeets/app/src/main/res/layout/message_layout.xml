<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:paddingEnd="48dp"
                android:paddingStart="8dp"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/message_layout_text"
        android:background="@drawable/message_shape"
        android:layout_toEndOf="@+id/message_thumbnail"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textColor="#fff"
        android:textSize="16sp"
        android:text="sample message text uiosdfjosifjaosudiofja soifja osuidfja osidofj aosiudffja sdiofja osidofj aosijf aosidfja osidf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/message_sender_name"
        android:layout_alignEnd="@id/message_layout_text"
        android:layout_below="@id/message_layout_text"
        android:text="Sent by Jon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:id="@+id/message_thumbnail"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
        android:textAlignment="center"
        android:background="@drawable/message_user_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/user_first_letter"
            android:text="J"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>

</RelativeLayout>