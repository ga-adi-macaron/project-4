<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_recording"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.korbkenny.peoplesplaylist.RecordingActivity">

    <EditText
        android:id="@+id/record_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title this track"
        android:maxLines="1"
        android:maxLength="50"/>
    <Button
        android:id="@+id/record_button"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/record_edittext"
        android:text="record"
        />
    <Button
        android:id="@+id/stop_button"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/record_edittext"
        android:text="stop"
        android:visibility="gone"/>
    <Button
        android:id="@+id/play_button"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/record_edittext"
        android:text="play"
        android:visibility="gone"/>
    <Button
        android:id="@+id/play_button_continue"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/record_edittext"
        android:text="play"
        android:visibility="gone"/>
    <Button
        android:id="@+id/pause_button"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/record_edittext"
        android:text="pause"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/redo_button"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_below="@id/record_edittext"
        android:layout_toRightOf="@id/play_button"
        android:text="redo"
        android:visibility="gone"/>
    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="submit"
        android:enabled="false"/>

</RelativeLayout>
