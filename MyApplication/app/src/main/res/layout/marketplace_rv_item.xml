<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:layout_marginTop="8dp"
    android:id="@+id/xbm_cardview">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/xbm_main_art"
            android:layout_width="75sp"
            android:layout_height="100sp"
            android:layout_marginRight="16sp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/xbm_title"
            android:layout_toRightOf="@id/xbm_main_art"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4sp"
            android:layout_marginTop="25sp"
            android:textColor="#000000"
            android:text="Game Title "
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/xbm_dev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4sp"
            android:layout_marginTop="4sp"
            android:textColor="#000000"
            android:text="Game Developer Studio"
            android:layout_toRightOf="@id/xbm_main_art"
            android:layout_below="@id/xbm_title"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>