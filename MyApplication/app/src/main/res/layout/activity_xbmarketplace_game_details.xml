<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="@color/colorPrimary">


<RelativeLayout
    android:id="@+id/activity_xbmarketplace_game_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.colinbradley.xboxoneutilitiesapp.store_page.games_with_gold.GWGDetails">

    <ProgressBar
        android:id="@+id/xbmgd_progress_bar"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/xbmgd_main_img"
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:layout_marginBottom="8sp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/xbmgd_previous_button"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_marginTop="65sp"
        android:elevation="8sp"
        android:background="@drawable/previous_button"
        android:backgroundTint="@color/colorAccent"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/xbmgd_next_button"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_marginTop="65sp"
        android:elevation="8sp"
        android:layout_alignParentRight="true"
        android:background="@drawable/next_button"
        android:backgroundTint="@color/colorAccent"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/xbmgd_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/xbmgd_main_img"
        android:layout_marginBottom="4sp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="Game Title: the sequel"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/xbmgd_dev_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/xbmgd_title"
        android:textColor="#000000"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/xbmgd_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/xbmgd_dev_name"
        android:layout_marginLeft="20sp"
        android:text="$19.99"
        android:textSize="20sp"
        android:textColor="#000000"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/xbmgd_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/xbmgd_price"
        android:layout_marginTop="8sp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/xbmgd_genres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Genres"
        android:textColor="#000000"
        android:layout_below="@id/xbmgd_description"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/xbmgd_genre_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/xbmgd_genres"
        android:textColor="#000000"
        android:visibility="invisible"/>




</RelativeLayout>
</ScrollView>