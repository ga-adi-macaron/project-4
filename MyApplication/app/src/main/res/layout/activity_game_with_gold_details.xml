<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">


<RelativeLayout
    android:id="@+id/activity_game_with_gold_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.colinbradley.xboxoneutilitiesapp.store_page.games_with_gold.GWGDetails"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/gwgd_main_img"
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:layout_marginBottom="8sp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/gwgd_previous_button"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_marginTop="65sp"
        android:elevation="8sp"
        android:background="@drawable/previous_button"
        android:backgroundTint="@color/colorAccent"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/gwgd_next_button"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_marginTop="65sp"
        android:elevation="8sp"
        android:layout_alignParentRight="true"
        android:background="@drawable/next_button"
        android:backgroundTint="@color/colorAccent"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/gwgd_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gwgd_main_img"
        android:layout_marginBottom="4sp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="Game Title: the sequel"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/gwgd_dev_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gwgd_title"
        android:visibility="invisible"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/gwgd_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gwgd_dev_name"
        android:layout_marginLeft="20sp"
        android:text="$19.99"
        android:textSize="20sp"
        android:textColor="#000000"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/gwgd_free_w_gold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Now Free With GOLD!!"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_below="@id/gwgd_dev_name"
        android:layout_marginLeft="16sp"
        android:layout_toRightOf="@id/gwgd_price"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/gwgd_crossout"
        android:layout_width="100sp"
        android:layout_height="20sp"
        android:layout_marginTop="4sp"
        android:background="@drawable/crossout"
        android:layout_below="@+id/gwgd_dev_name"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/gwgd_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gwgd_price"
        android:layout_marginTop="8sp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/gwgd_genres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Genres"
        android:textColor="#000000"
        android:layout_below="@id/gwgd_description"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/gwgd_genre_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gwgd_genres"
        android:textColor="#000000"
        android:visibility="invisible"/>

    <ProgressBar
        android:id="@+id/gwgd_progress_bar"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_centerInParent="true"/>




</RelativeLayout>
</ScrollView>