<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:layout_marginBottom="8dp"
    android:id="@+id/gameclips_cardview">

    <RelativeLayout
        android:id="@+id/gameclips_item_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/gameclips_item_img"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:elevation="4sp"/>

        <TextView
            android:id="@+id/gameclips_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_below="@id/gameclips_item_img"
            android:textColor="#000000"
            android:text="Clip Title"
            android:layout_toLeftOf="@+id/gc_fb_share"
            android:layout_alignLeft="@+id/gameclips_item_game"
            android:layout_alignStart="@+id/gameclips_item_game" />



        <ImageButton
            android:id="@+id/play_gc_button"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:background="@drawable/download_icon"
            android:backgroundTint="#000000"
            android:layout_below="@id/gameclips_item_img"
            android:layout_alignParentRight="true"
            android:layout_margin="4sp"
            android:elevation="8sp"/>

        <com.facebook.share.widget.ShareButton
            android:id="@+id/gc_fb_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gameclips_item_img"
            android:layout_toLeftOf="@id/play_gc_button"
            android:layout_marginTop="12sp"
            android:layout_marginRight="4sp"
            android:elevation="400dp"/>


        <TextView
            android:id="@+id/gameclips_item_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_below="@id/gameclips_item_title"
            android:layout_marginLeft="8sp"
            android:layout_toLeftOf="@id/gc_fb_share"
            android:text="Game Title"/>

        <TextView
            android:id="@+id/gameclips_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_below="@id/gameclips_item_game"
            android:text="game clip description goes here blah"
            android:layout_marginLeft="4sp"
            android:layout_marginRight="4sp"
            android:layout_marginTop="4sp"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>