<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:layout_marginBottom="8dp"
    android:id="@+id/gwg_cardview">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/gwg_box_art"
        android:layout_width="150sp"
        android:layout_height="200sp"
        android:layout_marginRight="8sp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/gwg_title"
        android:layout_toRightOf="@id/gwg_box_art"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4sp"
        android:layout_marginTop="45sp"
        android:textColor="#000000"
        android:text="Game Title "
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/gwg_original_price"
        android:layout_toRightOf="@id/gwg_box_art"
        android:layout_below="@id/gwg_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4sp"
        android:layout_marginBottom="8sp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:text="$29.99"/>

    <ImageView
        android:id="@+id/gwg_x"
        android:layout_width="60sp"
        android:layout_height="30sp"
        android:layout_below="@id/gwg_title"
        android:layout_toRightOf="@+id/gwg_box_art"
        android:background="@drawable/crossout"
        android:backgroundTint="#000000"
        />

    <TextView
        android:id="@+id/gwg_free_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/gwg_box_art"
        android:layout_below="@id/gwg_original_price"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="NOW FREE WITH GOLD!!"/>

</RelativeLayout>

    </android.support.v7.widget.CardView>